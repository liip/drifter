<VirtualHost *:80>
    ServerName {{ hostname }}

    {% for h in hostnames %}
        ServerAlias {{ h }}
    {% endfor %}

    <Directory />
        Options All
        AllowOverride All
        {% if ansible_lsb.major_release|int >= 8 %}
            Require all granted
        {% else %}
            Allow from all
        {% endif %}
    </Directory>

    DocumentRoot "{{ root_directory }}"
</VirtualHost>

{% if ssl %}
<VirtualHost *:443>
    ServerName {{ ssl_hostname | default(hostname) }}

    {% for h in ssl_hostnames | default(hostnames) %}
        ServerAlias {{ h }}
    {% endfor %}

    <Directory />
        Options All
        AllowOverride All
        {% if ansible_lsb.major_release|int >= 8 %}
            Require all granted
        {% else %}
            Allow from all
        {% endif %}
    </Directory>

    DocumentRoot "{{ root_directory }}"

    SSLEngine on
    SSLCertificateKeyFile {{ ssl_key_file }}
    SSLCertificateFile {{ ssl_cert_file }}
</VirtualHost>
{% endif %}
